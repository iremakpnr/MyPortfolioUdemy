@model List<MyPortfolioUdemy.DAL.Entities.Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">referanslar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">referans listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            referanslar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İsim Soyisim</th>
                                    <th scope="col">Unvan</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Resim Linki</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.TestimonialID</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageUrl</td>
                                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>

                        <a href="/Testimonial/CreateTestimonial" class="btn btn-info">Yeni Referans Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

