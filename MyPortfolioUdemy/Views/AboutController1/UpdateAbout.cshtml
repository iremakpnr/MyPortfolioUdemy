@model MyPortfolioUdemy.DAL.Entities.About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda Bilgisi</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda bilgisi güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="AboutID" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Kısa Açıklama</label>
                            <input type="text" asp-for="SubDescription" class="form-control" />
                            <br />
                            <label>Detay</label>
                            <input type="text" asp-for="Details" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Bilgileri güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

