@model List<MyPortfolioUdemy.DAL.Entities.Feature>
@{
    ViewData["Title"] = "FeaturePage";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkanlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkanlar Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne Çıkanlar Hakkındaki İşlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FeatureID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Feature/Deletefeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <a href="/Feature/CreateFeature" class="btn btn-info">Öne Çıkan Bilgisi Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

