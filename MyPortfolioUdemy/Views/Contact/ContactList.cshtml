@model List<MyPortfolioUdemy.DAL.Entities.Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">iletişim Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">iletişim Bilgileri listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            iletişim Bilgileri ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Email-1</th>
                                    <th scope="col">Email-2</th>
                                    <th scope="col">Telefon-1</th>
                                    <th scope="col">Telefon-2</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Email1</td>
                                        <td>@item.Email2</td>
                                        <td>@item.Phone1</td>
                                        <td>@item.Phone2</td>
                                        <td>@item.Address</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <a href="/Contact/CreateContact" class="btn btn-info">Yeni iletişim bilgisi Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

