@model List<MyPortfolioUdemy.DAL.Entities.Portfolio>

@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Projeler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Proje listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Projeler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt başlık</th>
                                    <th scope="col">Görsel Linki</th>
                                    <th scope="col">Bağlantı Linki</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PortfolioID</td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Url</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioID" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <a href="/Portfolio/CreatePortfolio" class="btn btn-info">Yeni Proje Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
