@model List<MyPortfolioUdemy.DAL.Entities.Skill>
@{
    ViewData["Title"] = "SkillPage";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeteneklerim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeteneklerim Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yeteneklerim işlemlerini aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Değer</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SkillID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <td><a href="/Skills/DeleteSkill/@item.SkillID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Skills/UpdateSkill/@item.SkillID" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <a href="/Skills/CreateSkill" class="btn btn-info">Yeni Yetenek Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

